<p id="notice"><%= notice %></p>

<h1>Shops</h1>
<%= hidden_field_tag :longitude, :id => "longitude", :value => params[:longitude]%>
<%= hidden_field_tag :latitude, :id => "latitude", :value => params[:latitude]%>
<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Name</th>
      <th>Email</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.picture %></td>
        <td><%= shop.name %></td>
        <td><%= shop.email %></td>
        <td><%= shop.city %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path %>
