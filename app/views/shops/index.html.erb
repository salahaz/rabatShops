
<% unless notice.nil? %>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-10 col-md-offset-1">
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="notice">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
<%end%>
<div class="row">
<% @shops.each do |shop| %>
  <div class="col-sm-3 nopadding mr-auto m-5 card" style="width: 18rem;">
    <%= link_to image_tag(shop.picture, width: "100%", height: "100%"),  :class => "img-fluid card-img-top"%>
    <div class="card-body">
      <h5 class="card-title"><%= shop.name %></h5>
      <h6 class="card-text"><%= shop.email %></h6>
      <h6 class="card-text"><%= shop.city %></h6>
    </div>
    <div class="card-body">
      <%= link_to 'Like', likes_shops_path(:id => shop.id), :method => :post, :class => "card-link" %>
      <%= link_to 'Dislike', 'javascript:;', :class => "card-link" %>
    </div>
  </div>
<% end %>
</div>
<br>
